{
  "manifest_version": 3,
  "name": "Taiga Sprint Burndown",
  "version": "0.2",
  "icons": {
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "${VITE_TAIGA_URL}"
      ],
      "js": [
        "content.js",
        "popup.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "${VITE_TAIGA_URL}"
  ]
}