{
  "manifest_version": 3,
  "name": "Taiga Sprint Burndown",
  "version": "0.1",
  "icons": {
    "32": "public/icon32.png",
    "64": "public/icon64.png",
    "128": "public/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js",
        "dist/popup.js"
      ]
    }
  ],
  "action": {
    "default_popup": "dist/popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}